<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="xillium-simple"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <requiredProperties>
    <requiredProperty key="persistence"><defaultValue>none</defaultValue></requiredProperty>
    <requiredProperty key="module1name"><defaultValue>core</defaultValue></requiredProperty>
    <requiredProperty key="deploy1name"><defaultValue>service</defaultValue></requiredProperty>
  </requiredProperties>

  <fileSets>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>deploys</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>deploys/__deploy1name__</directory>
      <includes>
        <!--include>**/*.xml</include-->
        <include>**/*.properties</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>doc</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>bin</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>etc</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>README</include>
        <include>.gitignore</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="commons" dir="commons" name="commons">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>doc</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="modules" dir="modules" name="modules">
      <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>__module1name__</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>__module1name__/src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>__module1name__/src/test/java</directory>
          <includes>
            <include>**/*.txt</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>__module1name__/src/test/resources</directory>
          <includes>
            <include>**/*.properties</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>__module1name__/doc</directory>
          <includes>
            <include>**/*</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype-descriptor>
